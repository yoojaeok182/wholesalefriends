<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/llayoutForTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_for_title"/>

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:paddingTop="35dp"
                android:paddingBottom="35dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/btnTobMenu01"
                    android:paddingLeft="18.66dp"
                    android:paddingRight="18.66dp"
                    android:background="@drawable/box_off_01"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:background="@drawable/icon_internet"
                        android:id="@+id/ivTopMenu01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                   <LinearLayout
                       android:layout_marginLeft="20dp"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:gravity="center_vertical">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="인터넷 쇼핑몰"
                           android:textSize="16sp"
                           android:textColor="@color/color_text_08"/>

                       <TextView
                           android:lineSpacingExtra="5dp"
                           android:layout_marginTop="9dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="개인몰,오픈마켓,소셜,\n블로그,카스 등 판매자"
                           android:textSize="12sp"
                           android:textColor="@color/color_text_03"/>
                   </LinearLayout>

                    <ImageView
                        android:background="@drawable/check_default"
                        android:id="@+id/ivTopMenuCheck01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnTopMenu02"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="18.66dp"
                    android:paddingRight="18.66dp"
                    android:background="@drawable/box_off_01"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:background="@drawable/icon_offline"
                        android:id="@+id/ivTopMenu02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="오프라인 매장"
                            android:textSize="16sp"
                            android:textColor="@color/color_text_08"/>

                        <TextView
                            android:lineSpacingExtra="5dp"
                            android:layout_marginTop="9dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="오프라인 매장을 운영하는\n판매자"
                            android:textSize="12sp"
                            android:textColor="@color/color_text_03"/>
                    </LinearLayout>

                    <ImageView
                        android:background="@drawable/check_default"
                        android:id="@+id/ivTopMenuCheck02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_bg2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/join_step_02_msg"
                    android:layout_marginTop="35dp"

                    android:textColor="@color/color_text_08"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:id="@+id/btnJoin01"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="18.66dp"
                    android:paddingRight="18.66dp"
                    android:background="@drawable/box_off_01"
                    android:layout_width="match_parent"
                    android:layout_height="77.33dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:background="@drawable/icon_delegate"
                        android:id="@+id/ivRepresent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/join_step_02_title_01"
                        android:textSize="16sp"
                        android:textColor="@color/color_text_08"/>

                    <ImageView
                        android:background="@drawable/check_default"
                        android:id="@+id/ivCheck01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnJoin02"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="18.66dp"
                    android:paddingRight="18.66dp"
                    android:background="@drawable/box_off_01"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:background="@drawable/icon_staff"
                        android:id="@+id/ivMember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/join_step_02_title_02"
                        android:textSize="16sp"
                        android:textColor="@color/color_text_08"/>

                    <ImageView
                        android:background="@drawable/check_default"
                        android:id="@+id/ivCheck02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="50.66dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_02"
            android:text="@string/button_title_04"
            android:textColor="@color/color_btn_title"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>