<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:background="@drawable/box_off_01"
            android:id="@+id/rootContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tvStoreName"
                android:textSize="15dp"
                android:textColor="@color/color_text_08"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color_01"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/btnItemCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivCheck"
                        android:background="@drawable/check_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/color_text_03"
                        android:textSize="14dp"
                        android:id="@+id/tvItemName"
                        android:layout_marginLeft="11.66dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="right|center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:background="@drawable/btn_delete_select"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivPhoto"
                    android:scaleType="centerCrop"
                    android:layout_width="81.33dp"
                    android:layout_height="81.33dp" />

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="left|center_vertical"
                        android:layout_marginTop="16dp"
                        android:id="@+id/tvItemInfo"
                        android:textSize="12dp"
                        android:textColor="@color/color_text_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="6dp"
                        android:id="@+id/tvItemPrice"
                        android:textSize="12dp"
                        android:textColor="@color/color_text_06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnSubtract"
                            android:background="@drawable/btn_subtract"/>

                        <LinearLayout
                            android:minWidth="23.33dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="23.33dp"
                            android:gravity="center"
                            android:background="@drawable/box_off_03">

                            <TextView
                                android:id="@+id/tvAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="12dp"
                                android:textColor="@color/color_text_03"/>
                        </LinearLayout>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnPlus"
                            android:background="@drawable/btn_plus"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>



    </LinearLayout>
</LinearLayout>